                  <i class="fas fa-map-marker-alt"></i> 
                  ${activity.location || 'Online'}
                </div>
                ${activity.team_id ? `
                <div class="meta-item">
                  <i class="fas fa-users"></i> 
                  Comunidad
                </div>
                ` : ''}
              </div>
              
              <div class="activity-progress">
                <div class="progress-bar">
                  <div class="progress-fill ${typeClass}" style="width:${progress}%;">
