              ${pointsBadge}
            </div>
            <div class="activity-content">
              <h3>${activity.title || 'Sin título'}</h3>
              <div class="activity-status ${statusClass}">
                <i class="${statusIcon}"></i> ${statusLabel}
              </div>
              <p>${activity.description ? activity.description.substring(0, 120) + (activity.description.length > 120 ? '...' : '') : 'Sin descripción'}</p>
              
              <div class="activity-meta">
                <div class="meta-item">
                  <i class="fas fa-calendar-alt"></i> 
                  ${formatDate(activity.created_at || new Date())}
                </div>
