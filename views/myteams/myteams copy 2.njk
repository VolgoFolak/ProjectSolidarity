        container.querySelectorAll('.admin-team-btn').forEach(btn => {
          btn.addEventListener('click', function() {
            const teamId = this.getAttribute('data-team-id');
            const team = allTeams.find(t => t.id === teamId);
            if (team) openAdminModal(team);
