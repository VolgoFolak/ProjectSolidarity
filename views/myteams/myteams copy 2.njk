      async function removeMember(userId, teamId) {
        if (confirm('¬øEst√°s seguro de que quieres quitar a este miembro de la comunidad?')) {
          try {
            const { error } = await supabase
              .from('team_members')
              .delete()
              .eq('user_id', userId)
