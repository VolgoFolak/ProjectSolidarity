{% block scripts %}
{{ super() }}
<script src="/js/compartir.js"></script>
<script src="/js/modules/causes-renderer.js"></script>
<script>
let causeCreationState = {
  currentStep: 1,
  formData: null,
  draftId: null,
  stripeStatus: null
};

document.getElementById('causeForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = collectFormData();
  if (!validateFormData(formData)) {
    showNotification('Por favor completa todos los campos requeridos', 'error');
    return;
  }
  causeCreationState.formData = formData;
  toggleSubmitButton(true);
  try {
    const { draftId } = await saveCauseDraft(formData);
    causeCreationState.draftId = draftId;
    const stripeStatus = await checkStripeAccount();
    causeCreationState.stripeStatus = stripeStatus;
    if (!stripeStatus.hasAccount || stripeStatus.status !== 'active') {
      showStripeSetupModal(stripeStatus);
      return;
    }
    await createFinalCause(draftId);
  } catch (error) {
    showNotification(error.message || 'Error creando causa', 'error');
  } finally {
    toggleSubmitButton(false);
  }
});

function collectFormData() {
  return {
    title: document.getElementById('title').value.trim(),
    short_description: document.getElementById('short_description').value.trim(),
    description: document.getElementById('description').value.trim(),
    goal: parseFloat(document.getElementById('goal').value),
    beneficiaries: parseInt(document.getElementById('beneficiaries').value, 10),
    city: document.getElementById('city').value.trim(),
    country: document.getElementById('country').value.trim(),
    points: parseInt(document.getElementById('points').value, 10) || 50,
    contact_email: document.getElementById('contact_email').value.trim(),
    phone_number: document.getElementById('phone_number').value.trim(),
    photoFile: document.getElementById('photo').files[0]
  };
}

function validateFormData(data) {
  return data.title && data.short_description && data.description &&
    data.goal && data.beneficiaries && data.city && data.country;
}

async function uploadPhoto(photoFile) {
  const fileExt = photoFile.name.split('.').pop();
  const fileName = `${Date.now()}-${Math.random().toString(36).substr(2, 9)}.${fileExt}`;
  const filePath = `public/${fileName}`;
  const { error: uploadError } = await supabase.storage
    .from('causes')
    .upload(filePath, photoFile);
  if (uploadError) throw new Error('Error subiendo foto: ' + uploadError.message);
  const { data } = supabase.storage.from('causes').getPublicUrl(filePath);
  return data.publicUrl;
}

async function saveCauseDraft(formData) {
  let photoUrl = null;
  if (formData.photoFile) {
    photoUrl = await uploadPhoto(formData.photoFile);
  }
  const draftData = { ...formData, photo_url: photoUrl };
  delete draftData.photoFile;
  const response = await fetch('/save-cause-draft', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ draftData })
  });
  if (!response.ok) {
    const error = await response.json();
    throw new Error(error.error || 'Error guardando borrador');
  }
  return await response.json();
}

async function createFinalCause(draftId) {
  const response = await fetch('/create-final-cause', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ draftId })
  });
  if (!response.ok) {
    const error = await response.json();
    throw new Error(error.error || 'Error creando causa final');
  }
  const result = await response.json();
  showSuccessMessage();
  return result;
}

async function checkStripeAccount() {
  const { data: { session } } = await supabase.auth.getSession();
  const userId = session?.user?.id;
  if (!userId) return { hasAccount: false, status: 'unknown' };
  const response = await fetch(`/stripe-account-status/${userId}`);
  if (!response.ok) {
    const error = await response.json();
    throw new Error(error.error || 'Error verificando Stripe');
  }
  return await response.json();
}

function toggleSubmitButton(loading) {
  const submitBtn = document.querySelector('#causeForm button[type="submit"]');
  if (loading) {
    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando causa...';
    submitBtn.disabled = true;
  } else {
    submitBtn.innerHTML = 'Crear causa';
    submitBtn.disabled = false;
  }
}

function showSuccessMessage() {
  document.getElementById('causeForm').style.display = 'none';
  document.getElementById('afterCreate').style.display = 'block';
  showNotification('¡Causa creada con éxito!', 'success');
  window.causesRenderer.loadCausesFromSupabase();
}

// Modal Stripe
function showStripeSetupModal(stripeStatus) {
  const modal = document.createElement('div');
  modal.className = 'stripe-setup-modal';
  modal.innerHTML = `
    <div class="modal-content">
      <h3><i class="fab fa-stripe"></i> Configuración Requerida</h3>
      ${!stripeStatus.hasAccount ? `<p>Para recibir donaciones, necesitas vincular una cuenta de Stripe.</p>` : `<p>Tu cuenta de Stripe necesita verificación para recibir pagos.</p>`}
      <div class="modal-actions">
        <button id="configureStripeBtn" class="btn btn-primary">Configurar ahora</button>
        <button id="continueWithoutStripeBtn" class="btn btn-outline">Continuar sin donaciones</button>
      </div>
    </div>
  `;
  document.body.appendChild(modal);
  modal.querySelector('#configureStripeBtn').addEventListener('click', async () => {
    await setupStripeAccount();
    modal.remove();
  });
  modal.querySelector('#continueWithoutStripeBtn').addEventListener('click', async () => {
    await createFinalCause(causeCreationState.draftId);
    modal.remove();
  });
}

async function setupStripeAccount() {
  const { data: { session } } = await supabase.auth.getSession();
  const userId = session?.user?.id;
  const email = session?.user?.email;
  const response = await fetch('/create-stripe-account', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ userId, email })
  });
  if (!response.ok) {
    const error = await response.json();
    throw new Error(error.error || 'Error creando cuenta Stripe');
  }
  const { accountId } = await response.json();
  await retryStripeOnboarding(userId, accountId);
}

async function retryStripeOnboarding(userId, accountId) {
  const response = await fetch('/create-account-link', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ accountId, userId })
  });
  if (!response.ok) {
    const error = await response.json();
    throw new Error(error.error || 'Error generando enlace Stripe');
  }
  const { url } = await response.json();
  window.location.href = url;
}

// Recuperación de borrador al cargar la página
document.addEventListener('DOMContentLoaded', async () => {
  try {
    const { data: { session } } = await supabase.auth.getSession();
    if (session?.user) {
      const response = await fetch(`/get-user-draft/${session.user.id}`);
      if (response.ok) {
        const { draft } = await response.json();
        if (draft) showDraftRecoveryNotification(draft);
      }
    }
  } catch (error) {
    console.error('Error checking for drafts:', error);
  }
});

function showDraftRecoveryNotification(draft) {
  const notification = document.createElement('div');
  notification.className = 'draft-recovery-notification';
  notification.innerHTML = `
    <p>Tienes una causa pendiente de creación. ¿Deseas continuar?</p>
    <button id="recoverDraftBtn">Continuar</button>
    <button id="discardDraftBtn">Descartar</button>
  `;
  document.body.appendChild(notification);
  notification.querySelector('#recoverDraftBtn').addEventListener('click', async () => {
    await createFinalCause(draft.id);
    notification.remove();
  });
  notification.querySelector('#discardDraftBtn').addEventListener('click', async () => {
    await fetch(`/delete-draft/${draft.id}`, { method: 'DELETE' });
    notification.remove();
  });
}

// Notificación visual
function showNotification(message, type = 'info', duration = 4000) {
  const existing = document.querySelector('.global-notification');
  if (existing) existing.remove();
  const notification = document.createElement('div');
  notification.className = `global-notification ${type}`;
  notification.innerHTML = `
    <div class="notification-content">
      <i class="fas fa-${type === 'error' ? 'times-circle' : type === 'warning' ? 'exclamation-triangle' : type === 'success' ? 'check-circle' : 'info-circle'}"></i>
      <span>${message}</span>
    </div>
  `;
  document.body.appendChild(notification);
  setTimeout(() => {
    notification.style.opacity = '1';
    notification.style.transform = 'translateY(0)';
  }, 10);
  setTimeout(() => {
    notification.style.opacity = '0';
    notification.style.transform = 'translateY(-20px)';
    setTimeout(() => notification.remove(), 300);
  }, duration);
}

document.addEventListener('DOMContentLoaded', async function() {
  // Detectar URL específica y abrir modal
  const urlPath = window.location.pathname;
  const causeMatch = urlPath.match(/\/causes\/([^\/]+)$/);
  
  if (causeMatch) {
    const specificCauseId = causeMatch[1];
    console.log('🎯 URL detectada para causa específica:', specificCauseId);
    
    // Cargar causas y luego abrir modal usando el renderer
    await loadCausesFromSupabase();
    
    if (window.causes && window.causes.length > 0) {
      const found = window.causes.find(c => c.id === specificCauseId);
      if (found) {
        setTimeout(() => {
          if (window.causesRenderer) {
            window.causesRenderer.showModal(specificCauseId, window.causes);
          } else {
            showCauseModal(specificCauseId);
          }
        }, 500);
      } else {
        window.location.href = '/causes';
      }
    }
  } else {
    // Cargar causas normalmente
    await loadCausesFromSupabase();
  }

  // Event listeners para crear causa
  setupCreateCauseListeners();
  
  // Event listeners para tabs y búsqueda
  setupTabsAndSearch();
});

// Función que usa el renderer si está disponible, sino fallback
async function loadCausesFromSupabase(filter = "all", searchTerm = "") {
  if (window.causesRenderer) {
    const { causes, error } = await window.causesRenderer.loadCausesFromSupabase(filter, searchTerm);
    
    if (error) {
      document.getElementById('causesList').innerHTML = '<div style="color:#e53e3e;text-align:center;">Error al cargar las causas.</div>';
      return;
    }
    
    const container = document.getElementById('causesList');
    window.causesRenderer.renderGrid(causes, container);
    window.causes = causes;
  } else {
    // Fallback al código original
    await loadCausesFromSupabaseOriginal(filter, searchTerm);
  }
}

// Función original como fallback
async function loadCausesFromSupabaseOriginal(filter = "all", searchTerm = "") {
  let query = supabase
    .from('causes')
    .select('*')
    .order('created_at', { ascending: false });

  if (filter !== "all") {
    query = query.eq('category', filter);
  }
  if (searchTerm && searchTerm.trim() !== "") {
    query = query.or(`title.ilike.%${searchTerm}%,description.ilike.%${searchTerm}%,city.ilike.%${searchTerm}%,country.ilike.%${searchTerm}%`);
  }
  
  const { data: causes, error } = await query;
  const causesList = document.getElementById('causesList');
  
  if (error) {
    causesList.innerHTML = '<div style="color:#e53e3e;text-align:center;">Error al cargar las causas.</div>';
    return;
  }
  
  causesList.innerHTML = '';
  
  if (!causes || causes.length === 0) {
    causesList.innerHTML = '<div style="color:#6b7280;text-align:center;padding:2rem;grid-column:1/-1;">No se encontraron causas.</div>';
    return;
  }
  
  const { data: { session } } = await supabase.auth.getSession();
  let donatedIds = [];
  if (session?.user) {
    donatedIds = await getUserDonatedCauseIds(session.user.id);
  }

